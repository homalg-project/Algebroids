#! @Chapter Tools

#! @Section Tools for quivers

#! @Description
#!  Return a pair consisting of the number of vertices of the quiver <A>q</A>
#!  and a list of pairs of integers encoding the arrows of <A>q</A>.
#! @Arguments q
#! @Returns a pair
DeclareOperation( "DefiningPairOfAQuiver",
        [ IsQuiver ] );
#! @InsertChunk DefiningPairOfAQuiver

CapJitAddTypeSignature( "DefiningPairOfAQuiver", [ IsQuiver ],
  function ( input_types )
    
    return rec( filter := IsNTuple,
                element_types :=
                [ rec( filter := IsInt ),
                  rec( filter := IsList, element_type := rec( filter := IsNTuple, element_types := [ IsInt, IsInt ] ) ) ] );
    
end );
